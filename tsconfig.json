{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
