<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mijn Uitgaven</title>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <h1>Mijn Uitgaven</h1>
  <table border="1">
    <thead>
      <tr>
        <th>Beschrijving</th>
        <th>Bedrag</th>
        <th>Datum</th>
        <th>Valuta</th>
        <th>Categorie</th>
        <th>Betaald</th>
        <th>Acties</th>
      </tr>
    </thead>
    <tbody>
      <% uitgaven.forEach(uitgave => { %>
      <tr>
        <td><%= uitgave.description %></td>
        <td><%= uitgave.amount %></td>
        <td><%= new Date(uitgave.date).toLocaleDateString() %></td>
        <td><%= uitgave.currency %></td>
        <td><%= uitgave.category %></td>
        <td><%= uitgave.isPaid ? 'Ja' : 'Nee' %></td>
        <td>
          <a href="/uitgaven/bewerken/<%= uitgave._id %>">Bijwerken</a> |
          <a href="/uitgaven/verwijderen/<%= uitgave._id %>" onclick="return confirm('Weet je zeker dat je deze uitgave wilt verwijderen?')">Verwijderen</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <a href="/dashboard">Terug naar Dashboard</a>
</body>
</html>
